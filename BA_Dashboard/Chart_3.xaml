<UserControl x:Class="BA_Dashboard.UserControl_xaml.Chart3_2_2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BA_Dashboard.UserControl_xaml"
             mc:Ignorable="d" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:gauges="clr-namespace:BA_Dashboard.UserControl_xaml"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance gauges:Chart3_2_2}">
    <Grid Background="White">
        <!--standard gauge-->
        <lvc:Gauge Margin="5"
                   From="0" To ="{Binding Gauge1_Error_To}" Value = "{Binding Gauge1_Error_Value}"/>
    </Grid>
</UserControl>
